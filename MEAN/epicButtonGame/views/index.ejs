<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Epic Button Game</title>
    <script src = "http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type ="text/javascript">
    $(document).ready(function () {
      var socket = io.connect()
      $("#epic_button").click(function () {
        console.log("Client sees epic button is being clicked!")
        socket.emit("epic_button_clicked", {
        })
      })
      $("#reset_button").click(function () {
        console.log("Client sees reset button is being clicked!")
        socket.emit("reset_button_clicked", {
        })
      })

      socket.on("server_response", function(count) {
        console.log("The server strikes back!")
        $("#number").html("<h1>The button has been pushed " + count + " times!")
      })

    })
    </script>
  </head>
  <body>
    <div id = "number"></div>
    <h5>Push the button to update the count</h5>
    <button id = "epic_button">Push the epic button</button>
    <hr>
    <button id = "reset_button">Reset count</button>
  </body>
</html>
